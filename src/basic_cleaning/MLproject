name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Fully-qualified name for input artifact
        type: string

      output_artifact:
        description: Name of output artifact
        type: string

      output_type:
        description: Artifact Type
        type: string

      output_description:
        description: Artifact's Description
        type: string

      min_price:
        description: Min. price for outlier cleaning
        type: float

      max_price:
        description: Max. price for outlier cleaning
        type: float


    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {min_price}  --max_price {max_price} 